{{> layout/header}}
<br/>
<div class="container">
    <form>
        <div class="form-group">
            <label for="username">ID:</label>
            <input type="text" class="form-control" value="{{username}}" id="username" readonly>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" placeholder="Enter Modify Password" id="password">
        </div>
        <div class="form-group">
            <label for="nickname">Nickname:</label>
            <input type="text" class="form-control" value="{{nickname}}" id="nickname">
        </div>
        <div class="form-group">
            <label for="email">Email address:</label>
            <input type="text" class="form-control" value="{{email}}" id="email">
        </div>

    </form>
    <button id="btn-update" class="btn btn-primary">정보수정</button>
    <button id="back" class="btn btn-dark" onclick="backFunc()">뒤로가기</button>
</div>
<script>
    function backFunc(){
        window.history.back();
    }
</script>
<script src="/js/user.js"></script>
{{>layout/footer}}