{{> layout/header}}
<br/>
<div class="container">
    <form>
        <input type="hidden" id="id" value="{{task.id}}">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" class="form-control" value="{{task.title}}" id="title">
        </div>
        <div class="form-group">
            <label for="deadline">deadline:</label>
            <input type="datetime-local" class="form-control"  id="deadline" value="{{task.deadline}}">
        </div>

        <br>
        <div class="form-group">
            <label for="content">ToDo</label>
            <textarea class="form-control summernote" id="content" >{{{task.content}}}</textarea>
        </div>
    </form>
    <div class="d-flex flex-row-reverse">
        <button class="btn btn-secondary" onclick="history.back()">뒤로가기</button>
        <p>&nbsp;</p>
        <button id="btn-update" class="btn btn-primary">수정 완료</button>
    </div>
</div>
<script>
    $('.summernote').summernote({
                height:250
    });
</script>
<script src="/js/task.js"></script>
{{>layout/footer}}