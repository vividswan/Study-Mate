{{> layout/header}}
<br/>
<div class="container">
    <div class="d-flex justify-content-center">
    <h1>{{task.title}}</h1>
    </div>
    <div class="d-flex flex-row-reverse">
    <p><strong>deadline</strong> : {{task.stringDeadline}}</p>
    </div>
    <hr/>
    <div>{{{task.content}}}</div>
    <input type="hidden" value="{{task.id}}" id="id"/>
    <hr/>
    <div class="feedback">
        <div class="row">
            <div class="col">
                <input type="text" class="form-control" id="feedback" placeholder="Feedback 작성" name="feedback">
            </div>
            <button class="btn btn-primary">작성</button><br/>
        </div>
        <div class="feedbackList">
            <div>

            </div>
        </div>
    </div>
    <hr/>
    <div class="d-flex flex-row-reverse">
        <button id="btn-delete" class="btn btn-danger">삭제</button>
        <p>&nbsp;</p>
        <a href="#"><button class="btn btn-info">수정하기</button></a>
        <p>&nbsp;</p>
        <button class="btn btn-secondary" onclick="history.back()">뒤로가기</button>
        <p>&nbsp;</p>
        <a href="#"><button class="btn btn-primary">완료</button></a>
    </div>
</div>
<script src="/js/task.js"></script>
{{>layout/footer}}