{{> layout/header}}
<br/>
<div class="container">
    <div class="d-flex justify-content-center">
    <h1>{{task.title}}</h1>
    </div>
    <div class="d-flex flex-row-reverse">
    <p><strong>deadline</strong> : {{task.stringDeadline}}</p>
    </div>
    <hr/>
    <div>{{{task.content}}}</div>
    <input type="hidden" value="{{userId}}" id="userId">
    <input type="hidden" value="{{task.id}}" id="id"/>
    <input type="hidden" value="{{task.isSuccess}}" id="isSuccess">
    <hr/>
    <div class="feedback">
        <div class="row">
            <div class="col">
                <textarea class="form-control" id="feedback" placeholder="Feedback 작성" name="feedback" rows="1"></textarea>
            </div>
            <button class="btn btn-primary" id="feedback-create">작성</button><br/>
        </div>
        <br>
        <div class="card">
            <div class="card-header d-flex justify-content-center">Feedback List</div
            <div class="list-group">
                    <div class="list-group-item d-flex justify-content-between">
                            <div>hello</div>
                            <button class="btn btn-dark badge">댓글 삭제</button>
                    </div>
            </div>
        </div>
        <hr/>
        <div class="d-flex flex-row-reverse">
            <button id="btn-delete" class="btn btn-danger">삭제</button>
            <p>&nbsp;</p>
            <a href="/task/update/{{task.id}}"><button class="btn btn-info">수정하기</button></a>
            <p>&nbsp;</p>
            <button class="btn btn-secondary" onclick="history.back()">뒤로가기</button>
            <p>&nbsp;</p>
            {{#isSuccess}}
                <button class="btn btn-danger" id="btn-success">완료취소</button>
            {{/isSuccess}}
            {{^isSuccess}}
                <button class="btn btn-primary" id="btn-success">완료</button>
            {{/isSuccess}}
        </div>
    </div>
</div>
<script src="/js/task.js"></script>
{{>layout/footer}}